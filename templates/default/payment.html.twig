{% extends 'base.html.twig' %}

{% block content %}
    <div class="content">
        <h1>Zahlungen</h1>
        <div class="table-wrapper">
            <input class="form-control" id="searchField" type="search" placeholder="Suchen..." />

            <div class="btn-toolbar" role="toolbar">
                <div class="btn-group" role="group">
                    <button class="btn btn-default"><i class="fa fa-chevron-left"></i> Zurück</button>
                    <button class="btn btn-primary">1</button>
                    <button class="btn btn-default">2</button>
                    <button class="btn btn-default">3</button>
                    <button class="btn btn-default">Nächste <i class="fa fa-chevron-right"></i></button>
                </div>
            </div>
            <table class="table table-striped" id="searchTable">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Datum</th>
                    <th>Beschreibung</th>
                    <th>Betrag</th>
                </tr>
                </thead>
                <tbody>
                {% for payment in payments %}
                    <tr>
                        <td>{{ payment.id }}</td>
                        <td>{{ payment.date|date('d.m.Y') }}</td>
                        <td>{{ payment.description }}</td>
                        <td>{{ payment.amount }}Fr.</td>
                        <td><a href=""><i class="fa fa-pencil"></i></a></td>
                        <td><a href="" class="deleteLink" data-toggle="modal" data-id="{{ payment.id }}" data-target="#deletePaymentModal"><i class="fa fa-trash red"></i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="btn-toolbar" role="toolbar">
                <div class="btn-group" role="group">
                    <button class="btn btn-default"><i class="fa fa-chevron-left"></i> Zurück</button>
                    <button class="btn btn-primary">1</button>
                    <button class="btn btn-default">2</button>
                    <button class="btn btn-default">3</button>
                    <button class="btn btn-default">Nächste <i class="fa fa-chevron-right"></i></button>
                </div>
            </div>
        </div>

        <!-- Delete Payment Modal -->
        {% include 'components/deleteModal.html.twig' with {'id': 'deletePaymentModal', 'title': 'Zahlung löschen', 'text': 'Wollen Sie diese Zahlung löschen?'} %}

        <!-- Create Payment Modal -->
        {% include 'components/createModal.html.twig' with {'title': 'Zahlung erstellen'} %}

    </div>
{% endblock %}

{% block stylesheets %}
    <script src="{{ asset('build/table.js') }}" async defer></script>
{% endblock %}